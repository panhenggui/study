export PATH=$PATH:.:$HOME
LD_LIBRARY_PATH=/lib:/usr/lib:.
export LD_LIBRARY_PATH
#export LD_PRELOAD="libonload.so"
ulimit -c unlimited
ulimit  unlimited
umask 0027

if [ $# -eq 1 ]
then
	if [ "$1" = "qmdb" -o "$1" = "qquery" ]
	then
		rm $1/flow/* > /dev/null 2>/dev/null
	fi
  	cd $1/bin
	nohup ./$1 2>&1  &
else
	cd $1$2/bin
	if [ $# -eq 2 ]
	then
		nohup ./$1 $2 2>&1 &
	else
		nohup ./$* 2>&1 &
	fi
fi
